<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ani_all2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini\nGame\nParadise"
        android:textStyle="bold"
        android:textSize="70dp"
        android:textColor="#504C4C"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/selectbnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectbnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도감"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/startbnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 선택"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintTop_toBottomOf="@id/selectbnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>