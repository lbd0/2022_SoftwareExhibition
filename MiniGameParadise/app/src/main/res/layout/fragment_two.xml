<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#221002"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="십이간지 도감"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/cha1"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_hor"/>

        <ImageView
            android:id="@+id/cha2"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_sheep"/>

        <ImageView
            android:id="@+id/cha3"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginRight="5dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_mon"/>

        <ImageView
            android:id="@+id/cha4"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_chi"/>

        <ImageView
            android:id="@+id/cha5"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_dog"/>

        <ImageView
            android:id="@+id/cha6"
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:background="#EE736F6F"
            android:src="@drawable/ani_lock_pig"/>

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2 / 2"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"/>


</LinearLayout>